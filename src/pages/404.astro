---
import '../styles/global.css';
import '../styles/index.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Titan Not Found</title>
</head>
<body>
    <div id="videofull">
        <video class="lazy" autoplay loop muted playsinline poster="/assets/NorthstarPromoPoster.jpg">
            <source src="/assets/NorthstarPromoVid.mp4">
        </video>
        <div class="overlay"></div>
        <div>
            <div id="centerlogo">
                <h1>404</h1>
                <h2>Titan Not Found</h2>
            </div>
            <div id="mainbuttons">
                <a href="/" class="button">Go Home</a>
            </div>
        </div>
    </div>
</body>
</html>


<style>
    body {
        text-align: center;
    }

    h1 {
        font-size: 40px;
    }

    #centerlogo {
        vertical-align: middle;
        user-select: none !important;
        pointer-events: none;
        filter: drop-shadow(0px 4px 16px rgba(0, 0, 0, 0.75));
        text-align: center;
    }

    #mainbuttons {
        margin: 3.6rem auto 8rem auto;
        width: max-content;
        user-select: none !important;
    }

    a.button {
        margin: 8px;
        padding: 16px 32px;
        height: 50px;
    }
</style>
